<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

   >
  <include layout="@layout/head_title_bar"></include>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white"
      android:id="@+id/ll_all"
      android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mine_background"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_mine_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_15dp"
            android:layout_marginTop="@dimen/distance_20dp"
            android:textSize="@dimen/font_size_16sp"
            android:textColor="@color/mine_some_color"
            android:text="手机号码："/>
        <TextView
            android:id="@+id/et_mine_phone"
            android:layout_width="@dimen/height_100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_20dp"
            android:layout_marginLeft="@dimen/distance_5dp"
            android:layout_marginBottom="@dimen/distance_8dp"
            android:textSize="@dimen/font_size_16sp"
            android:textColor="@color/mine_some_color"
            android:inputType="number"
            android:text=""/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mine_background"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="@dimen/distance_15dp"
            android:id="@+id/tv_verification"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/distance_30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/distance_20dp"
            android:gravity="center"
            android:text="验证码:"
            android:textColor="@color/mine_some_color"
            android:layout_marginBottom="@dimen/distance_10dp"
            android:textSize="@dimen/font_size_16sp" />

        <EditText
            android:id="@+id/et_write_m_verify"
            android:layout_width="@dimen/width_120dp"
            android:layout_height="@dimen/distance_30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/tv_verification"
            android:background="@drawable/rounded_coners_white"
            android:inputType="number"
            android:paddingLeft="@dimen/distance_5dp"
            android:text=""
            android:textColor="@color/mine_some_color"
            android:textSize="@dimen/distance_16dp" />
        <Button
            android:id="@+id/bt_get_m_verify"
            android:layout_width="105dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_bt_get_verification"
            android:gravity="center"
            android:padding="@dimen/distance_5dp"
            android:text="获取验证码"
            android:textSize="@dimen/textsize_16sp"
            android:textColor="@color/light_blue_new" />
    </RelativeLayout>
      <Button
          android:id="@+id/bt_next_step"
          android:layout_width="120dp"
          android:layout_height="40dp"
          android:layout_gravity="center"
          android:text="下一步"
          android:textColor="@color/white"
          android:textSize="@dimen/font_size_18sp"
          android:background="@drawable/bg_bt_finish"
          android:layout_marginTop="@dimen/height_60dp"/>

  </LinearLayout>



</LinearLayout>
