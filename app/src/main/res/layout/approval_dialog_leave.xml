<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_circle_corner_bg_white"
    android:padding="@dimen/distance_18dp">

    <EditText
        android:id="@+id/et_approval_suggestion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_135dp"
        android:layout_below="@+id/approval_hint_1"
        android:layout_marginTop="@dimen/distance_5dp"
        android:background="@drawable/shape_edit_text_border"
        android:gravity="top|left"
        android:hint="请填写你的审核意见..."
        android:padding="@dimen/distance_5dp"
        android:textColor="@color/item_textcolor"
        android:textSize="@dimen/textsize_16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_approval_suggestion"
        android:layout_marginTop="@dimen/distance_25dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_approval_refuse"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/width_100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_circle_corner_btn_white"
                android:text="退回"
                android:textColor="@color/light_blue_new"
                android:textSize="@dimen/font_size_18sp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_approval_pass"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/width_100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_circle_corner_btn_blue"
                android:text="通过"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18sp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>