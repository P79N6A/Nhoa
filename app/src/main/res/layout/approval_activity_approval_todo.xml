<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/head_title_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wisdom.nhoa.widget.ScrollViewWithScrollListener
            android:id="@+id/approval_sv"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/approval_ll_top_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_eff1fd"
                            android:gravity="left|center_vertical"
                            android:paddingBottom="@dimen/distance_10dp"
                            android:paddingLeft="@dimen/distance_15dp"
                            android:paddingTop="@dimen/distance_10dp"
                            android:text="@string/approval_approval_todo_file_num"
                            android:textColor="@color/textcolor"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_todo_file_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:paddingBottom="@dimen/distance_10dp"
                            android:paddingLeft="@dimen/distance_10dp"
                            android:paddingRight="@dimen/distance_10dp"
                            android:paddingTop="@dimen/distance_10dp"
                            android:textColor="@color/textcolor"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/grey_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_eff1fd"
                            android:gravity="left|center_vertical"
                            android:paddingBottom="@dimen/distance_10dp"
                            android:paddingLeft="@dimen/distance_15dp"
                            android:paddingTop="@dimen/distance_10dp"
                            android:text="@string/approval_approval_todo_file_title"
                            android:textColor="@color/textcolor"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_todo_file_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:paddingBottom="@dimen/distance_10dp"
                            android:paddingLeft="@dimen/distance_10dp"
                            android:paddingRight="@dimen/distance_10dp"
                            android:paddingTop="@dimen/distance_10dp"
                            android:textColor="@color/textcolor"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/grey_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_eff1fd"
                            android:gravity="left|center_vertical"
                            android:paddingBottom="@dimen/distance_10dp"
                            android:paddingLeft="@dimen/distance_15dp"
                            android:paddingTop="@dimen/distance_10dp"
                            android:text="@string/approval_approval_todo_file_process"
                            android:textColor="@color/textcolor"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_todo_file_process"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:paddingBottom="@dimen/distance_10dp"
                            android:paddingLeft="@dimen/distance_10dp"
                            android:paddingRight="@dimen/distance_10dp"
                            android:paddingTop="@dimen/distance_10dp"
                            android:textColor="@color/textcolor"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/grey_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_eff1fd"
                            android:gravity="left|center_vertical"
                            android:paddingBottom="@dimen/distance_10dp"
                            android:paddingLeft="@dimen/distance_15dp"
                            android:paddingTop="@dimen/distance_10dp"
                            android:text="@string/approval_approval_todo_file_author"
                            android:textColor="@color/textcolor"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_todo_file_author"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:paddingBottom="@dimen/distance_10dp"
                            android:paddingLeft="@dimen/distance_10dp"
                            android:paddingRight="@dimen/distance_10dp"
                            android:paddingTop="@dimen/distance_10dp"
                            android:textColor="@color/textcolor"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/grey_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_eff1fd"
                            android:gravity="left|center_vertical"
                            android:paddingBottom="@dimen/distance_10dp"
                            android:paddingLeft="@dimen/distance_15dp"
                            android:paddingTop="@dimen/distance_10dp"
                            android:text="@string/approval_approval_todo_file_date"
                            android:textColor="@color/textcolor"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_todo_file_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:paddingBottom="@dimen/distance_10dp"
                            android:paddingLeft="@dimen/distance_10dp"
                            android:paddingRight="@dimen/distance_10dp"
                            android:paddingTop="@dimen/distance_10dp"
                            android:textColor="@color/textcolor"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/grey_line" />

                </LinearLayout>

                <RadioGroup
                    android:id="@+id/approval_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_30dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/approval_rb_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/approval_approval_todo_file_todo_list"
                        android:textColor="@color/selector_radiobutton_text_blue"
                        android:textSize="@dimen/textsize_16sp" />

                    <RadioButton
                        android:id="@+id/approval_rb_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/approval_approval_todo_file_content"
                        android:textColor="@color/selector_radiobutton_text_blue"
                        android:textSize="@dimen/textsize_16sp" />

                    <RadioButton
                        android:id="@+id/approval_rb_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/approval_approval_todo_file_attach"
                        android:textColor="@color/selector_radiobutton_text_blue"
                        android:textSize="@dimen/textsize_16sp" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginTop="@dimen/padding_8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/approval_rb_ll_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey_line"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/approval_rb_ll_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey_line"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/approval_rb_ll_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey_line"
                        android:orientation="horizontal" />

                </LinearLayout>


                <com.wisdom.nhoa.widget.AutoMesureViewPager
                    android:id="@+id/approval_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.wisdom.nhoa.widget.ScrollViewWithScrollListener>

        <LinearLayout
            android:id="@+id/approval_ll_collection_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <RadioGroup
                android:id="@+id/approval_rg_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_10dp"
                android:orientation="horizontal"

                >

                <RadioButton
                    android:id="@+id/approval_rb_1_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/approval_approval_todo_file_todo_list"
                    android:textColor="@color/selector_radiobutton_text_blue"
                    android:textSize="@dimen/textsize_16sp" />

                <RadioButton
                    android:id="@+id/approval_rb_2_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/approval_approval_todo_file_content"
                    android:textColor="@color/selector_radiobutton_text_blue"
                    android:textSize="@dimen/textsize_16sp" />

                <RadioButton
                    android:id="@+id/approval_rb_3_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/approval_approval_todo_file_attach"
                    android:textColor="@color/selector_radiobutton_text_blue"
                    android:textSize="@dimen/textsize_16sp" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="@dimen/padding_8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/approval_rb_ll_1_top"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_weight="1"
                    android:background="@color/grey_line"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/approval_rb_ll_2_top"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_weight="1"
                    android:background="@color/grey_line"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/approval_rb_ll_3_top"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_weight="1"
                    android:background="@color/grey_line"
                    android:orientation="horizontal" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/approval_ll_todo_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_50dp"
            android:layout_gravity="bottom"
            android:background="@color/color_647aea"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/approval_tv_todo_reject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/dbgw_reject"
                android:gravity="center"
                android:text="@string/approval_approval_todo_reject"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_14sp" />

            <TextView
                android:id="@+id/approval_tv_todo_alter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/dbgw_amind"
                android:gravity="center"
                android:text="@string/approval_approval_todo_alter"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_14sp" />

            <TextView
                android:id="@+id/approval_tv_todo_sign"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/dbgw_sign"
                android:gravity="center"
                android:text="@string/approval_approval_todo_sign"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_14sp" />

            <TextView
                android:id="@+id/approval_tv_todo_send"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/dbgw_send"
                android:gravity="center"
                android:text="@string/approval_approval_todo_send"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_14sp" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>