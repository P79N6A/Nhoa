<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01000000"
    android:gravity="center"
    android:id="@+id/ll_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/height_30dp"
        android:layout_marginRight="@dimen/height_30dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/metting_detail_banner" />

        <TextView
            android:id="@+id/tv_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_banner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/distance_15dp"

            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_line"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@+id/tv_subject"
            android:layout_marginLeft="@dimen/distance_25dp"
            android:layout_marginRight="@dimen/distance_25dp"
            android:layout_marginTop="@dimen/distance_15dp"
            android:background="#999999"
            android:orientation="vertical" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_title_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_line"
            android:layout_marginLeft="@dimen/distance_25dp"
            android:layout_marginTop="@dimen/distance_10dp"
            android:text="会议主题:"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_16sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_value_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_line"
            android:layout_marginLeft="@dimen/distance_5dp"
            android:layout_marginTop="@dimen/distance_10dp"
            android:layout_toRightOf="@+id/tv_title_subject"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_title_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_subject"
            android:layout_marginLeft="@dimen/distance_25dp"
            android:layout_marginTop="@dimen/distance_10dp"
            android:text="召开部门:"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_16sp" />

        <TextView
            android:id="@+id/tv_value_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_value_subject"
            android:layout_marginLeft="@dimen/distance_5dp"
            android:layout_marginTop="@dimen/distance_10dp"
            android:layout_toRightOf="@+id/tv_title_department"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_title_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_department"
            android:layout_marginLeft="@dimen/distance_25dp"
            android:layout_marginTop="@dimen/distance_10dp"
            android:text="开始时间:"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_16sp" />

        <TextView
            android:id="@+id/tv_value_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_value_department"
            android:layout_marginLeft="@dimen/distance_5dp"
            android:layout_marginTop="@dimen/distance_10dp"
            android:layout_toRightOf="@+id/tv_title_begin"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_begin"
            android:layout_marginLeft="@dimen/distance_25dp"
            android:layout_marginTop="@dimen/distance_10dp"
            android:text="会议内容:"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_16sp" />

        <TextView
            android:id="@+id/tv_value_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_value_begin"
            android:layout_marginLeft="@dimen/distance_5dp"
            android:layout_marginTop="@dimen/distance_10dp"
            android:layout_toRightOf="@+id/tv_title_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_sign"
            android:layout_width="@dimen/width_120dp"
            android:layout_height="@dimen/distance_35dp"
            android:layout_below="@+id/tv_value_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/distance_20dp"
            android:layout_marginTop="@dimen/distance_50dp"
            android:background="@drawable/shape_circle_cornrer_bg_orange"
            android:text="签  到"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>