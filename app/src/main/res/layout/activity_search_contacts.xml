<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wisdom.nhoa.contacts.activity.SearchContactsActivity"
    android:orientation="vertical">
<include layout="@layout/head_title_bar"></include>
    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_34dp"
        android:layout_marginLeft="@dimen/distance_15dp"
        android:layout_marginRight="@dimen/distance_15dp"
        android:layout_marginTop="@dimen/distance_10dp"
        android:background="@drawable/addressbook_search_bg"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/search"
            android:layout_marginLeft="@dimen/distance_10dp"/>
        <EditText
            android:id="@+id/et_contact_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/distance_5dp"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/font_size_14sp"
            android:background="@null"
          />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/tv_search_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></ListView>
        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_50dp"
            android:gravity="center"
            android:text="暂无匹配记录"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/font_size_18sp"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>
