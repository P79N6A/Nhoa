<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_add_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_layout_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_f2f2f2"
            android:drawablePadding="@dimen/distance_5dp"
            android:gravity="center"
            android:paddingBottom="@dimen/distance_10dp"
            android:paddingTop="@dimen/distance_10dp"
            android:text="议题一"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/head_title"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_eff1fd"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_15dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:text="@string/meeting_publish_subject"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_meeting_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_10dp"
                    android:paddingRight="@dimen/distance_10dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:text=""
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/grey_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_eff1fd"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_15dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:text="@string/meeting_publish_person"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_topic_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_10dp"
                    android:paddingRight="@dimen/distance_10dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:text=""
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/grey_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_eff1fd"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_15dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:text="@string/meeting_publish_attach"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/ll_attach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_10dp"
                    android:paddingRight="@dimen/distance_10dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:textColor="@color/textcolor">

                    <TextView
                        android:id="@+id/tv_add_attach"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/distance_5dp"
                        android:layout_marginLeft="@dimen/distance_10dp"
                        android:layout_marginRight="@dimen/distance_10dp"
                        android:background="@color/color_eff1fd"
                        android:gravity="center"
                        android:paddingBottom="@dimen/distance_5dp"
                        android:paddingTop="@dimen/distance_5dp"
                        android:text="@string/meeting_publish_add_attach"
                        android:textColor="#2196f3"
                        android:textSize="@dimen/font_size_14sp" />

                    <TextView
                        android:id="@+id/tv_file"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_15dp"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>