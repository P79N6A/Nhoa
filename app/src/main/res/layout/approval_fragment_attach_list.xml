<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.wisdom.nhoa.widget.ListViewForScrollView
        android:id="@+id/approval_lv_attach_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/distance_50dp"
        />


    <TextView
        android:id="@+id/tv_no_data_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_50dp"
        android:gravity="center_horizontal"
        android:text="@string/sendreceive_receive_no_accessory"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/font_size_18sp"/>


</LinearLayout>