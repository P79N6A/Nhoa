<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/head_title_bar" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/notice_d_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_16dp"
        android:layout_marginTop="@dimen/distance_16dp"
        android:layout_marginRight="@dimen/distance_16dp"
        android:gravity="center"
         />

    <TextView
        android:id="@+id/notice_d_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/textsize_16sp"
        android:layout_marginRight="@dimen/distance_16dp"
        android:layout_marginTop="@dimen/distance_16dp"
         />

    <TextView
        android:id="@+id/notice_d_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_16dp"
        android:layout_marginTop="@dimen/distance_16dp"
        android:layout_marginRight="@dimen/distance_16dp"
        />
    </LinearLayout>
</ScrollView>
</LinearLayout>
