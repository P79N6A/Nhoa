<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/approval_item_tv_law_title_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_15dp"
        android:layout_marginTop="@dimen/distance_10dp"
        android:ellipsize="end"
        android:text="标题:"
        android:singleLine="true"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_size_14sp" />

    <TextView
        android:id="@+id/approval_item_tv_law_title"
        android:layout_width="wrap_content"
        android:text="123321"
        android:layout_toRightOf="@+id/approval_item_tv_law_title_title"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/distance_15dp"
        android:layout_marginLeft="@dimen/distance_5dp"
        android:layout_marginTop="@dimen/distance_10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_size_14sp" />

    <TextView
        android:id="@+id/approval_item_tv_law_subject_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/approval_item_tv_law_title"
        android:layout_marginLeft="@dimen/distance_15dp"
        android:layout_marginTop="@dimen/distance_10dp"
        android:textColor="@color/color_333333"
        android:text="文号:"
        android:textSize="@dimen/font_size_16sp" />
    <TextView
        android:id="@+id/approval_item_tv_law_subject"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/approval_item_tv_law_subject_title"
        android:layout_height="wrap_content"
        android:layout_below="@+id/approval_item_tv_law_title"
        android:layout_marginLeft="@dimen/distance_5dp"
        android:layout_marginRight="@dimen/distance_15dp"
        android:text="未分配文号"
        android:layout_marginTop="@dimen/distance_10dp"
        android:textColor="@color/chartreuse"
        android:textSize="@dimen/font_size_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@+id/approval_item_tv_law_subject"
        android:layout_marginTop="@dimen/distance_10dp"
        android:background="@color/grey_line" />
</RelativeLayout>