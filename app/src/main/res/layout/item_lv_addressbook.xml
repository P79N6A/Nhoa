<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">


    <ImageView
        android:id="@+id/img_head"
        android:layout_width="@dimen/width_40dp"
        android:layout_height="@dimen/height_40dp"
        android:layout_marginLeft="@dimen/distance_15dp"
        android:layout_marginTop="@dimen/padding_12dp"
        android:src="@mipmap/avatar_default"/>

    <TextView
        android:id="@+id/tv_name"
        android:text="芳芳"
        android:textSize="@dimen/textsize_16sp"
        android:textColor="@color/textcolor"
        android:layout_marginLeft="@dimen/distance_10dp"
        android:layout_marginTop="@dimen/padding_12dp"
        android:layout_toRightOf="@+id/img_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_zhiwei"
        android:text="宣传部部长"
        android:layout_below="@+id/tv_name"
        android:textSize="@dimen/font_size_14sp"
        android:textColor="@color/item_textcolor"
        android:layout_marginLeft="@dimen/distance_10dp"
        android:layout_toRightOf="@+id/img_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/distance_25dp"
        android:text="18300560515"
        android:textColor="@color/item_textcolor"
        android:textSize="@dimen/font_size_16sp" />
    <View
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tv_zhiwei"
        android:layout_alignStart="@+id/tv_zhiwei"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_bg"/>

</RelativeLayout>