<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_item">

    <TextView
        android:id="@+id/starttime_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/endtime_item"
        android:layout_marginStart="@dimen/distance_15dp"
        android:layout_marginLeft="@dimen/distance_15dp"
        android:text="23:22"
        android:textColor="@color/item_textcolor"
        android:visibility="gone"
        android:textSize="@dimen/font_size_15sp" />

    <TextView
        android:id="@+id/endtime_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/distance_15dp"
        android:layout_marginTop="@dimen/distance_13dp"
        android:text="23:22"
        android:textColor="@color/item_textcolor"
        android:visibility="gone"
        android:textSize="@dimen/font_size_15sp" />

    <TextView
        android:id="@+id/schdule_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_below="@id/starttime_item"
        android:layout_alignStart="@+id/starttime_item"
        android:layout_marginTop="@dimen/distance_16dp"
        android:layout_marginBottom="@dimen/distance_15dp"
        android:layout_marginLeft="@dimen/distance_15dp"
        android:text="日程"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/font_size_18sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
          android:layout_alignParentTop="true"
        android:background="@color/schedule_event_line"
        android:visibility="gone"
        android:id="@+id/top_line_view" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:layout_alignParentBottom="true"
        android:background="@color/schedule_event_line"
        android:id="@+id/bottom_line_view" />
</RelativeLayout>