<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".supervision.activity.SupervisionDetailActivity"
    android:orientation="vertical">
    <include android:id="@+id/titlebar" layout="@layout/head_title_bar"></include>
    <LinearLayout
        android:id="@+id/approval_ll_top_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlebar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@color/color_eff1fd"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/distance_10dp"
                android:paddingLeft="@dimen/distance_15dp"
                android:paddingTop="@dimen/distance_10dp"
                android:text="督办名称"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_supervision_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/distance_10dp"
                android:paddingLeft="@dimen/distance_10dp"
                android:paddingRight="@dimen/distance_10dp"
                android:paddingTop="@dimen/distance_10dp"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/grey_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@color/color_eff1fd"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/distance_10dp"
                android:paddingLeft="@dimen/distance_15dp"
                android:paddingTop="@dimen/distance_10dp"
                android:text="起始时间"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_begin_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/distance_10dp"
                android:paddingLeft="@dimen/distance_10dp"
                android:paddingRight="@dimen/distance_10dp"
                android:paddingTop="@dimen/distance_10dp"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/grey_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@color/color_eff1fd"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/distance_10dp"
                android:paddingLeft="@dimen/distance_15dp"
                android:paddingTop="@dimen/distance_10dp"
                android:text="结束时间"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/distance_10dp"
                android:paddingLeft="@dimen/distance_10dp"
                android:paddingRight="@dimen/distance_10dp"
                android:paddingTop="@dimen/distance_10dp"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/grey_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@color/color_eff1fd"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/distance_10dp"
                android:paddingLeft="@dimen/distance_15dp"
                android:paddingTop="@dimen/distance_10dp"
                android:text="内容"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_supervision_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/distance_10dp"
                android:paddingLeft="@dimen/distance_10dp"
                android:paddingRight="@dimen/distance_10dp"
                android:paddingTop="@dimen/distance_10dp"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/grey_line" />
    </LinearLayout>
    <Button
        android:id="@+id/bt_edit_supervision"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_50dp"

        android:background="@color/color_4EDC70"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:text="编辑" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_supervision_list"
        android:layout_above="@id/bt_edit_supervision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/approval_ll_top_items"></android.support.v7.widget.RecyclerView>




</RelativeLayout>