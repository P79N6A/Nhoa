<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".homepage.activity.ScheduleActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/head_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height_fifty"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg_titlegroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_centerVertical="true">
            <RadioButton
                android:id="@+id/rb_supervision"
                android:layout_width="90dp"
                android:layout_height="31dp"
                android:textColor="@color/white"
                android:button="@null"
                android:textSize="@dimen/textsize_16sp"
                android:gravity="center"
                android:text="发起督办"/>
            <RadioButton
                android:id="@+id/rb_supervision_search"
                android:layout_width="90dp"
                android:layout_height="31dp"
                android:textColor="@color/white"
                android:button="@null"
                android:gravity="center"
                android:textSize="@dimen/textsize_16sp"
                android:text="被督办"/>
        </RadioGroup>

        <TextView
            android:id="@+id/head_back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:text="back"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/head_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arroww_left" />

        <TextView
            android:id="@+id/head_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:text="FUN"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/head_right_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:src="@mipmap/add"
            android:visibility="visible" />

    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_supervision"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>


</LinearLayout>