<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/head_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar"
        android:paddingBottom="@dimen/distance_50dp">

        <LinearLayout
            android:id="@+id/approval_ll_top_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/distance_50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_eff1fd"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_15dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:text="@string/leave_start_time"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/icon_pickup"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_10dp"
                    android:paddingRight="@dimen/distance_10dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/grey_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/distance_50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_eff1fd"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_15dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:text="@string/leave_end_time"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/icon_pickup"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_10dp"
                    android:paddingRight="@dimen/distance_10dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/grey_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/distance_50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_eff1fd"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_15dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:text="@string/leave_leave_type"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_leave_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/icon_pickup"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_10dp"
                    android:paddingRight="@dimen/distance_10dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:text="请选择"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/grey_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/distance_50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_eff1fd"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_15dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:text="@string/leave_leave_day"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tv_leave_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:inputType="number"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_10dp"
                    android:paddingRight="@dimen/distance_10dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/grey_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/distance_50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_eff1fd"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_15dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:text="@string/leave_leave_reason"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tvleave_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_10dp"
                    android:paddingRight="@dimen/distance_10dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/grey_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_eff1fd"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_15dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:text="@string/leave_approver"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_approver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/icon_pickup"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_10dp"
                    android:paddingRight="@dimen/distance_10dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:text="请选择"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/grey_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_eff1fd"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_15dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:text="@string/copy_to"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_copy_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/icon_pickup"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_10dp"
                    android:paddingRight="@dimen/distance_10dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:text="请选择"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/grey_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/distance_50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_eff1fd"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_15dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:text="@string/leave_remark"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tv_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_10dp"
                    android:paddingRight="@dimen/distance_10dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/grey_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_50dp">

                <TextView
                    android:id="@+id/tv_accessory"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="@color/color_eff1fd"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/distance_10dp"
                    android:paddingLeft="@dimen/distance_15dp"
                    android:paddingTop="@dimen/distance_10dp"
                    android:text="@string/leave_accessory"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />

                <TextView

                    android:id="@+id/tv_filename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/distance_10dp"
                    android:layout_toLeftOf="@+id/bt_select_file"
                    android:layout_toRightOf="@id/tv_accessory"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/bt_select_file"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/distance_10dp"
                    android:background="@drawable/bg_bt_select_file"
                    android:gravity="center"
                    android:paddingLeft="@dimen/distance_10dp"
                    android:paddingRight="@dimen/distance_10dp"
                    android:text="选择文件"
                    android:textColor="@color/light_blue_new"
                    android:textSize="16sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/grey_line" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_apply_for"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:background="@drawable/bg_bt_finish"
        android:text="申请"
        android:textColor="@color/white" />
</RelativeLayout>