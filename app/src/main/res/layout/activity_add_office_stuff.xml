<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_parent"
    android:orientation="vertical"
    >
    <include
        android:id="@+id/title_bar"
        layout="@layout/head_title_bar"/>
    <LinearLayout
        android:layout_below="@+id/title_bar"
        android:id="@+id/approval_ll_top_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_stuff_subject"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@color/color_eff1fd"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/distance_10dp"
                android:paddingLeft="@dimen/distance_15dp"
                android:paddingTop="@dimen/distance_10dp"
                android:text="@string/office_stuff_stuff"
                android:textColor="@color/textcolor"
                android:textSize="16sp"/>

            <TextView
                android:text="请选择"
                android:id="@+id/tv_leave_stuff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_pickup"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/distance_10dp"
                android:paddingRight="@dimen/distance_10dp"
                android:paddingBottom="@dimen/distance_10dp"
                android:paddingTop="@dimen/distance_10dp"
                android:textColor="@color/textcolor"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/grey_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@color/color_eff1fd"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/distance_10dp"
                android:paddingLeft="@dimen/distance_15dp"
                android:paddingTop="@dimen/distance_10dp"
                android:text="@string/office_stuff_num"
                android:textColor="@color/textcolor"
                android:textSize="16sp"/>

            <EditText
                android:background="@null"
                android:id="@+id/tv_leave_num"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/distance_10dp"
                android:paddingLeft="@dimen/distance_10dp"
                android:paddingRight="@dimen/distance_10dp"
                android:paddingTop="@dimen/distance_10dp"
                android:textColor="@color/textcolor"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/grey_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@color/color_eff1fd"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/distance_10dp"
                android:paddingLeft="@dimen/distance_15dp"
                android:paddingTop="@dimen/distance_10dp"
                android:text="@string/office_stuff_reason"
                android:textColor="@color/textcolor"
                android:textSize="16sp"/>

            <EditText
                android:background="@null"
                android:id="@+id/tvleave_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/distance_10dp"
                android:paddingLeft="@dimen/distance_10dp"
                android:paddingRight="@dimen/distance_10dp"
                android:paddingTop="@dimen/distance_10dp"
                android:textColor="@color/textcolor"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/grey_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@color/color_eff1fd"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/distance_10dp"
                android:paddingLeft="@dimen/distance_15dp"
                android:paddingTop="@dimen/distance_10dp"
                android:text="@string/leave_approver"
                android:textColor="@color/textcolor"
                android:textSize="16sp"/>
            <TextView
                android:text="请选择"
                android:id="@+id/tv_approver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_pickup"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/distance_10dp"
                android:paddingRight="@dimen/distance_10dp"
                android:paddingBottom="@dimen/distance_10dp"
                android:paddingTop="@dimen/distance_10dp"
                android:textColor="@color/textcolor"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/grey_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@color/color_eff1fd"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/distance_10dp"
                android:paddingLeft="@dimen/distance_15dp"
                android:paddingTop="@dimen/distance_10dp"
                android:text="@string/copy_to"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_copy_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_pickup"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/distance_10dp"
                android:paddingLeft="@dimen/distance_10dp"
                android:paddingRight="@dimen/distance_10dp"
                android:paddingTop="@dimen/distance_10dp"
                android:text="请选择"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/grey_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@color/color_eff1fd"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/distance_10dp"
                android:paddingLeft="@dimen/distance_15dp"
                android:paddingTop="@dimen/distance_10dp"
                android:text="@string/leave_remark"
                android:textColor="@color/textcolor"
                android:textSize="16sp"/>

            <EditText
                android:background="@null"
                android:id="@+id/tv_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/distance_10dp"
                android:paddingLeft="@dimen/distance_10dp"
                android:paddingRight="@dimen/distance_10dp"
                android:paddingTop="@dimen/distance_10dp"
                android:textColor="@color/textcolor"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/grey_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/grey_line"/>
    </LinearLayout>



    <Button
        android:id="@+id/bt_apply_for"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:background="@drawable/bg_bt_finish"
        android:text="申请"
        android:textColor="@color/white"/>
</RelativeLayout>