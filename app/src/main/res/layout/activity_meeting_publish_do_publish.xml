<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/ll_head"
        layout="@layout/head_title_bar" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_publish_meeting"
        android:layout_below="@+id/ll_head">

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/head_title"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_eff1fd"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_15dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text="@string/index_meeting_meeting_theme"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_meeting_theme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_10dp"
                        android:paddingRight="@dimen/distance_10dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text=""
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:visibility="gone"
                    android:background="@color/grey_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_eff1fd"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_15dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text="@string/index_meeting_convoke_department"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_convoke_department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_10dp"
                        android:paddingRight="@dimen/distance_10dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text=""
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/grey_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_eff1fd"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_15dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text="@string/index_meeting_room"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_meeting_room"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_10dp"
                        android:paddingRight="@dimen/distance_10dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text=""
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/grey_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_eff1fd"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_15dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text="@string/index_meeting_compere"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_compere"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_10dp"
                        android:paddingRight="@dimen/distance_10dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/grey_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_eff1fd"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_15dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text="@string/index_meeting_participants"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/et_Participant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="@string/index_meeting_participant_title"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_10dp"
                        android:paddingRight="@dimen/distance_10dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/grey_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_eff1fd"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_15dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text="@string/meeting_contect_person"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_meeting_contect_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_10dp"
                        android:paddingRight="@dimen/distance_10dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text=""
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/grey_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_eff1fd"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_15dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text="@string/meeting_contect_person_phone"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_meeting_contect_person_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_10dp"
                        android:inputType="number"
                        android:paddingRight="@dimen/distance_10dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text=""
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/grey_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_eff1fd"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_15dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text="@string/meeting_record_person"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_meeting_record_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_10dp"
                        android:paddingRight="@dimen/distance_10dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text=""
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/grey_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_eff1fd"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_15dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text="@string/index_meeting_start_time"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_10dp"
                        android:paddingRight="@dimen/distance_10dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text=""
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/grey_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_eff1fd"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_15dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text="@string/index_meeting_end_time"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_10dp"
                        android:paddingRight="@dimen/distance_10dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text=""
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/grey_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_eff1fd"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_15dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text="@string/index_meeting_current_state"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_current_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_10dp"
                        android:paddingRight="@dimen/distance_10dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text=""
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/grey_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_eff1fd"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_15dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text="@string/leave_remark"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="@dimen/distance_10dp"
                        android:paddingLeft="@dimen/distance_10dp"
                        android:paddingRight="@dimen/distance_10dp"
                        android:paddingTop="@dimen/distance_10dp"
                        android:text=""
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/grey_line" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_add_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/distance_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/add_yt"
                    android:drawablePadding="@dimen/distance_5dp"
                    android:text="添加议题"
                    android:textSize="@dimen/font_size_16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_publish_meeting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/color_647aea"
        android:text="@string/meeting_publish_title"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_16sp"
        android:textStyle="bold" />
</RelativeLayout>