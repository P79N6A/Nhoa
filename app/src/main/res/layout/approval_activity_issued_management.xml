<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/head_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/approval_tv_my_sponsor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_45dp"
            android:layout_marginLeft="@dimen/distance_10dp"
            android:layout_marginRight="@dimen/distance_5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_circle_cornrer_blue"
            android:gravity="center"
            android:text="@string/approval_my_sponsor"
            android:textColor="@color/light_blue_new"
            android:textSize="@dimen/font_size_18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/approval_tv_my_approval"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_45dp"
            android:layout_marginLeft="@dimen/distance_5dp"
            android:layout_marginRight="@dimen/distance_5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_circle_cornrer_blue"
            android:gravity="center"
            android:text="@string/approval_my_approval"
            android:textColor="@color/light_blue_new"
            android:textSize="@dimen/font_size_18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/class_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_6dp"
            android:paddingBottom="@dimen/width_2dp"
            android:paddingTop="@dimen/width_2dp"
            android:text="@string/approval_issue"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textsize_16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_6dp"
            android:src="@mipmap/class_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginLeft="@dimen/distance_10dp"
        android:layout_marginRight="@dimen/distance_10dp"
        android:layout_marginTop="@dimen/distance_15dp"
        android:background="@color/grey_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/approval_ll_issue_todo"
            android:layout_width="@dimen/height_165dp"
            android:layout_height="@dimen/height_165dp"
            android:layout_marginLeft="@dimen/distance_10dp"
            android:layout_marginRight="@dimen/distance_5dp"
            android:background="@drawable/shape_circle_cornrer_blue_stroke"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/distance_5dp"
                android:drawableTop="@mipmap/fw_fwdb"
                android:gravity="center"
                android:text="@string/approval_issue_todo"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/approval_ll_issue_check"
            android:layout_width="@dimen/height_165dp"
            android:layout_height="@dimen/height_165dp"
            android:layout_marginLeft="@dimen/distance_5dp"
            android:layout_marginRight="@dimen/distance_5dp"
            android:background="@drawable/shape_circle_cornrer_pink_stroke"
            android:drawablePadding="@dimen/distance_6dp"
            android:gravity="center"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/distance_5dp"
                android:drawableTop="@mipmap/fw_fwcy"
                android:gravity="center"
                android:text="@string/approval_issue_check"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>